modules = ["php-8.2", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Run Angular Dev Server"

[[workflows.workflow]]
name = "Run Angular Dev Server"
author = 46622848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Angular/leave-management && npm start"

[[workflows.workflow]]
name = "Run PHP API Server"
author = 46622848
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd php-api && php -S 0.0.0.0:8080"
